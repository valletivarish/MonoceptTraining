package com.monocept.model;

public class InputValidator {
    private final String userName;
    private final String password;
    private final String email;

    public InputValidator(String userName, String password, String email) {
        this.userName = userName;
        this.password = password;
        this.email = email;
    }

    public boolean isUserNameValid() {
        if (userName != null && !userName.isEmpty() && userName.length() >= 3 && userName.length() <= 20) {
        	return true;
        }
        return false;
    }

    public boolean isPasswordValid() {
        if (password != null && !password.isEmpty() && password.length() >= 8 && password.length() <= 30) {
        	return true;
        }
        return false;
    }

    public boolean isEmailValid() {
        if (email != null && email.contains("@") && email.contains(".")) {
        	return true;
        }
        return false;
    }
}
