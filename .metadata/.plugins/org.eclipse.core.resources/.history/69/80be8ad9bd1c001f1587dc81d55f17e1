package com.monocept.model;

public class InputValidator {
   
    public boolean isUserNameValid(String userName) {
        if (!isNotNullOrEmpty(userName) || !isLengthWithinRange(userName, 3, 20)) {
            return false;
        } else {
            return true;
        }
    }

    public boolean isPasswordValid(String password) {
        if (!isNotNullOrEmpty(password) || !isLengthWithinRange(password, 8, 30)) {
            return false;
        } else {
            return true;
        }
    }

    public boolean isEmailValid(String email) {
        if (!isNotNullOrEmpty(email) || !isLengthWithinRange(email, 5, 50) || !checkEmailFormat(email)) {
            return false;
        } else {
            return true;
        }
    }

    private boolean checkEmailFormat(String email) {
        if (email.contains("@") && email.contains(".") && email.indexOf("@") < email.lastIndexOf(".")) {
            return true;
        } else {
            return false;
        }
    }

    private boolean isNotNullOrEmpty(String value) {
        if (value != null && !value.isEmpty()) {
            return true;
        } else {
            return false;
        }
    }

    private boolean isLengthWithinRange(String value, int minLength, int maxLength) {
        if (value.length() >= minLength && value.length() <= maxLength) {
            return true;
        } else {
            return false;
        }
    }
}
